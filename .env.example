# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# For development: cp .env.development .env
# For production: cp .env.production .env

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=shift_user
DB_PASSWORD=your_password_here
DB_NAME=shift_management

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_hashed_password_here

# Application Settings
SECRET_KEY=your_secret_key_here
DEBUG=True

# Deadline Settings (default day of month for deadline)
DEFAULT_DEADLINE_DAY=10

# Scheduler Settings (days before deadline to send reminders)
REMINDER_DAYS_BEFORE=[7, 3, 1]

# Logging
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]

# Session Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=86400

# API Settings
API_PREFIX=/api
API_VERSION=v1

# Retry Settings for External Services
LINE_API_MAX_RETRIES=3
LINE_API_RETRY_DELAY=1
LINE_API_TIMEOUT=10
